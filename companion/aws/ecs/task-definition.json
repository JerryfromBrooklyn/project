{
  "family": "companion-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::774305584181:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::774305584181:role/companionTaskRole",
  "containerDefinitions": [
    {
      "name": "companion-server",
      "image": "774305584181.dkr.ecr.us-east-1.amazonaws.com/companion-server:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3020,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "S3_BUCKET",
          "value": "shmong"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:ssm:us-east-1:774305584181:parameter/companion/aws-access-key-id"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:ssm:us-east-1:774305584181:parameter/companion/aws-secret-access-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/companion-server",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
} 